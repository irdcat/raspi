
{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "domain",
    "resources",
    "mongo"
  ],
  "properties": {
    "domain": {
      "type": "string",
      "enum": [
        "raspi.local"
      ]
    },
    "resources": {
      "type": "object",
      "required": [
        "requests"
      ],
      "properties": {
        "requests": {
          "type": "object",
          "required": [
            "memory",
            "cpu"
          ],
          "properties": {
            "memory": {
              "type": "string",
              "pattern": "^([+-]?[0-9.]+)([eEinumkKMGTP]*[-+]?[0-9]*)$"
            },
            "cpu": {
              "type": "string",
              "pattern": "^([+-]?[0-9.]+)([eEinumkKMGTP]*[-+]?[0-9]*)$"
            }
          }
        }
      }
    },
    "mongo": {
      "type": "object",
      "required": [
        "service",
        "namespace",
        "port",
        "database"
      ],
      "properties": {
        "service": {
          "type": "string"
        },
        "namespace": {
          "type": "string"
        },
        "port": {
          "type": "integer",
          "minimum": 0,
          "maximum": 65535
        }
      }
    }
  }
}
