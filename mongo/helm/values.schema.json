{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "domain",
        "docker",
        "development"
    ],
    "properties": {
        "domain": {
            "type": "string",
            "enum": [
                "raspi.local"
            ]
        },
        "docker": {
            "type": "object",
            "required": [
                "image",
                "tag"
            ],
            "properties": {
                "image": {
                    "type": "string",
                    "pattern": "^[a-z0-9_/\\-]+$"
                },
                "tag": {
                    "type": "string",
                    "pattern": "^[a-zA-Z0-9_\\-]+$"
                }
            }
        },
        "development": {
            "type": "boolean"
        }
    }
}