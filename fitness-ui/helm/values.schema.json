{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "domain",
        "image",
        "resources"
    ],
    "properties": {
        "domain": {
            "type": "string",
            "enum": [
                "raspi.local"
            ]
        },
        "image": {
            "type": "object",
            "required": [
                "repository",
                "tag"
            ],
            "properties": {
                "repository": {
                    "type": "string",
                    "pattern": "^[a-z0-9_/\\-]+$"
                },
                "tag": {
                    "type": "string",
                    "pattern": "^[a-zA-Z0-9_\\-]+$"
                }
            }
        },
        "resources": {
            "type": "object",
            "required": [
                "requests"
            ],
            "properties": {
                "requests": {
                    "type": "object",
                    "required": [
                        "memory",
                        "cpu"
                    ],
                    "properties": {
                        "memory": {
                            "type": "string",
                            "pattern": "^([+-]?[0-9.]+)([eEinumkKMGTP]*[-+]?[0-9]*)$"
                        },
                        "cpu": {
                            "type": "string",
                            "pattern": "^([+-]?[0-9.]+)([eEinumkKMGTP]*[-+]?[0-9]*)$"
                        }
                    }
                }
            }
        }
    }
}